<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wordpress_connector_form" model="ir.ui.view">
        <field name="name">wordpress.connector.form</field>
        <field name="model">wordpress.connector</field>
        <field name="arch" type="xml">
            <form string="WordPress Connector">
                <group>
                    <field name="name"/>
                    <field name="url"/>
                    <field name="consumer_key"/>
                    <field name="consumer_secret"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_wordpress_connector" model="ir.actions.act_window">
        <field name="name">WordPress Connectors</field>
        <field name="res_model">wordpress.connector</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_wordpress_connector" name="WordPress" parent="base.menu_custom" action="action_wordpress_connector"/>

    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <div>
                    <field name="sync_to_wordpress"/>
                    <label for="sync_to_wordpress"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
